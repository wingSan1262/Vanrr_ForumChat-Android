<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:gravity="bottom"
    android:id="@+id/parent_chat"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/image_profile_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        android:elevation="0dp">

        <ImageView
            android:id="@+id/chat_profile_picture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/purple_700" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/chat_card"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/chat_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="start"
            android:background="@color/grey_chat"
            >

            <TextView
                android:id="@+id/chat_username"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:textSize="15sp"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/chat_image"
                android:visibility="visible"
                android:layout_marginStart="13dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/chat_message"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="5"
                android:text="When I set the TextView width to wrap_content it gets flexible with the content"/>


            <TextView
                android:id="@+id/chat_time"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:minEms="10"
                android:layout_gravity="end"
                android:textAlignment="viewEnd"
                android:textSize="11sp"
                android:text="2020-07-01 @18:18:18"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>